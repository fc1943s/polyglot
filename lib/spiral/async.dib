## new_async_unit

#!spiral

inl new_async_unit forall t. (fn : () -> ()) : async t =
    run_target function
        | Fsharp (Native) => fun () =>
            inl result : optionm'.option' (async t) = optionm'.none' ()
            $"let mutable _!result = !result"
            $"async {"
            fn ()
            $"}"
            $"|> fun x -> _!result <- Some x"
            $"_!result |> Option.get"
        | _ => fun () => null ()

