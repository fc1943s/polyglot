open rust_operators

inl home () =
    leptos.log $'"ui.home ()"'

    inl global_state : state.global_state = leptos.use_context ()

    inl get_dark_mode () =
        global_state.state |> leptos.rw_signal_get
        |> fun state => state.dark_mode |> leptos.rw_signal_get

    leptos.div {
        props = [
            $'"class=\\\"flex flex-1\\\""'
            get_dark_mode |> leptos.bool_prop "class:dark"
        ]
        children = content.content >> leptos.to_view
    }
